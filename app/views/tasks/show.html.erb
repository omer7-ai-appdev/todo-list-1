<div>
  <div>
    <h1>
      Task #<%= @the_task.id %> details
    </h1>

    <div>
      <div>
        <a href="/tasks">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_task/<%= @the_task.id %>">
          Delete task
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Description
      </dt>
      <dd>
        <%= @the_task.description %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @the_task.user_id %>
      </dd>

      <dt>
        In progress
      </dt>
      <dd>
        <%= @the_task.in_progress %>
      </dd>

      <dt>
        Done
      </dt>
      <dd>
        <%= @the_task.done %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_task.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_task.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit task
    </h2>

    <form action="/modify_task/<%= @the_task.id %>"  method="post" >
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description" value="<%= @the_task.description %>">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_task.user_id %>">
      </div>

      <div>
        <input type="checkbox" id="in_progress_box" name="query_in_progress" value="1" <%= "checked" if @the_task.in_progress %>>

        <label for="in_progress_box">
            In progress
        </label>
      </div>

      <div>
        <input type="checkbox" id="done_box" name="query_done" value="1" <%= "checked" if @the_task.done %>>

        <label for="done_box">
            Done
        </label>
      </div>

      <button>
        Update task
      </button>
    </form>
  </div>
</div>

<hr>
